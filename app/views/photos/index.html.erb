<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.title %></td>
        <td><%= photo.body %></td>
        <td><%= link_to image_tag(photo.image.url(:med)), photo.image.url %></td>
        <td><%= photo.user.username %></td>
        <td><%= link_to 'Show', user_photo_path(photo) %></td>
        <td><%= link_to 'Edit', edit_user_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', user_photo_path(photo), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_user_photo_path %>
